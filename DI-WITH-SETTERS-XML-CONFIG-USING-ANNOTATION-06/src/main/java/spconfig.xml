<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                           http://www.springframework.org/schema/context
                           http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <context:annotation-config/> 
<bean class="com.sathya.AddressBean" id="permanentAddress">  
	<property name="cityName" value="HYDERABAD"/>
	<property name="state" value="TELANGANA"/>
</bean>

<bean class="com.sathya.EmployeeBean" id="temporaryAddress">
	 <property name="hno" value="101"/>
	<property name="cityName" value="Vijayawada"/>
	<property name="state" value="AndhraPradesh"/>
</bean>
  
  <bean class="com.sathya.EmployeeBean" id="empObj">
  		<property name="empId" value="120"/>
  		<property name="empName" value="Suman"/>
  		<property name="salary" value="9000.99"/>
  </bean>
</beans>
